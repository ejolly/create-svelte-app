{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.wordWrap": "bounded",
  "editor.detectIndentation": true,
  "svelte.plugin.typescript.enable": true,
  "svelte.plugin.css.diagnostics.enable": true,
  // Make sure we're using prettier for all filetypes
  // Need this because we need to override the default json and svelte formatters that
  // folks might have configured
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
